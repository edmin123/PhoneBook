@{
    ViewBag.Title = "AllCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<hr />

<a type="button" href="@Url.Action("Create")" class="btn btn-sm btn-success">
    <span class="glyphicon glyphicon-plus"></span>
    <span >Create New</span>
</a>
<br />
<br />
<table id="customers" class="table table-bordered table-hover" >
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Delete</th>
    </tr>
        </thead>
    <tbody>
    

</tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {

            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customer",
                    dataSrc:""
                },
                "language": {
                    "search": "Search by Last Name:"
                },
               
                 
                columns:[{
                    data:"firstName"
                    
                }, {
                    data:"lastName"
                }, {
                    data:"phoneNumber"
                }, {
                    data: "id",
                    render: function (data) {
                        return "<button class='btn btn-link js-delete' data-item-id=" + data + ">Delete</button>"
                    }
                }

                ],
                columnDefs: [{
                    "targets": 1,
                    "searchable": true
                     }],
            columnDefs: [{
                "targets": [0,2,3],
                "searchable": false
            }],
            
                
            });
                

            $("#customers").on("click", ".js-delete", function () {
                var button=$(this);
                if (confirm("Are you sure you want to delete this customer?")) {
                    $.ajax({
                        url:"/api/customer/" + button.attr("data-item-id"),
                        method:"DELETE",
                        success:function(){
                            table.row(button.parents("tr")).remove().draw();
                        }
                    })
                }


            });




        })




    </script>
    
    
    
     }